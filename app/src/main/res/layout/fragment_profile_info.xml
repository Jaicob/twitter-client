<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_profile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivProfileImagep"
        android:scaleType="centerCrop"
        android:layout_width="75dp"
        android:layout_height="75dp"
        tools:src="@android:mipmap/sym_def_app_icon"/>

    <TextView
        android:id="@+id/tvScreenNamep"
        tools:text="Screen Name"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivProfileImagep"/>


    <TextView
        android:id="@+id/tvDescriptionp"
        tools:text="Description"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvScreenNamep"
        />

    <TextView
        android:id="@+id/tvLocationp"
        tools:text="Location"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDescriptionp" />

    <TextView
        android:id="@+id/tvFollowersp"
        tools:text="Followers"
        android:textSize="15sp"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tvFollowingp"
        tools:text="Following"
        android:textSize="15sp"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFollowersp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tvNumTweetsp"
        tools:text="Num Tweets"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLocationp"/>
</RelativeLayout>
